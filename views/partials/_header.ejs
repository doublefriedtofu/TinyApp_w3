<!-- the file name starts with underscore -->
<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse d-flex justify-content-between" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <% if(user) { %>
        <form method="POST" action="/logout">
          <div class="d-flex">
            <p>Logged in as: <%= user.email %>!</p>
            <button type="submit" class="btn btn-warning">sign out</button>
          </div>
          <% } else { %>
            <form method="GET" action="/login">
              <div class="d-flex">
                <button type="submit" class="btn btn-primary">Sign In</button>
              </div>
            </form>
            <form method="GET" action="/login">
              <div class="d-flex">
                <button type="submit" class="btn btn-primary">register</button>
              </div>
            </form>
          </form>
            <% } %>
    </div>
  </nav>
</header>